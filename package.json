    "@typescript-eslint/parser": "^7.13.1",
    "copy-webpack-plugin": "^12.0.2",
    "copyfiles": "^2.4.1",
    "dat.gui": "^0.7.9",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.6.0",
